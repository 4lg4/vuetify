@import "../bootstrap"
@import "../theme"

/* Themes */
timeline($material)
  background-color: $material.v-timelines
  color: $material.text.primary

theme(timeline, "timeline")

.v-timeline
  list-style: none
  padding: 20px 0 20px
  position: relative
  margin-top: 30px

.v-timeline:before
  top: 50px
  bottom: 0
  position: absolute
  content: " "
  width: 3px
  background-color: #E5E5E5
  left: 50%
  margin-left: -1px

.v-timeline h6
  color: #333333
  font-weight: 400
  margin: 10px 0px 0px

.v-timeline.v-timeline-simple
  margin-top: 30px
  padding: 0 0 20px

.v-timeline.v-timeline-simple:before
  left: 5%
  background-color: #E5E5E5

.v-timeline.v-timeline-simple > li > .v-timeline__body
  width: 86%

.v-timeline.v-timeline-simple > li > .v-timeline__icon
  left: 5%

.v-timeline > li
  margin-bottom: 20px
  position: relative

.v-timeline > li:before, .v-timeline > li:after
  content: " "
  display: table

.v-timeline > li:after
  clear: both

.v-timeline > li > .v-timeline__body
  width: 45%
  float: left
  padding: 20px
  margin-bottom: 20px
  position: relative
  box-shadow: 0 1px 4px 0 rgba(0, 0, 0, 0.14)
  border-radius: 6px
  color: rgba(0, 0, 0, 0.87)
  background: #fff

.v-timeline > li > .v-timeline__body:before
  position: absolute
  top: 26px
  right: -15px
  display: inline-block
  border-top: 15px solid transparent
  border-left: 15px solid #e4e4e4
  border-right: 0 solid #e4e4e4
  border-bottom: 15px solid transparent
  content: " "

.v-timeline > li > .v-timeline__body:after
  position: absolute
  top: 27px
  right: -14px
  display: inline-block
  border-top: 14px solid transparent
  border-left: 14px solid #FFFFFF
  border-right: 0 solid #FFFFFF
  border-bottom: 14px solid transparent
  content: " "

.v-timeline > li > .v-timeline__icon
  width: 50px
  height: 50px
  line-height: 51px
  font-size: 1.4em
  text-align: center
  position: absolute
  top: 16px
  left: 50%
  margin-left: -24px
  z-index: 100
  border-top-right-radius: 50%
  border-top-left-radius: 50%
  border-bottom-right-radius: 50%
  border-bottom-left-radius: 50%
  background-color: currentColor
  box-shadow: 0 4px 20px 0px rgba(0, 0, 0, 0.14), 0 7px 10px -5px rgba(0, 0, 0, 0.14)

.v-timeline > li.v-timeline__item:nth-child(odd) > .v-timeline__body
  float: right
  background-color: #FFFFFF

.v-timeline > li.v-timeline__item:nth-child(odd) > .v-timeline__body:before
  border-left-width: 0
  border-right-width: 15px
  left: -15px
  right: auto

.v-timeline > li.v-timeline__item:nth-child(odd) > .v-timeline__body:after
  border-left-width: 0
  border-right-width: 14px
  left: -14px
  right: auto

.v-timeline-heading
  margin-bottom: 15px

.v-timeline-title
  margin-top: 0
  color: inherit

.v-timeline-body > ul
  margin-bottom: 0

/* Changes for small display */
@media (max-width: 991px)
  .v-timeline:before
    left: 5%

  .v-timeline > li > .v-timeline__icon
    left: 5%

  .v-timeline > li > .v-timeline__body
    float: right
    width: 86%

  .v-timeline > li > .v-timeline__body:before
    border-left-width: 0
    border-right-width: 15px
    left: -15px
    right: auto

  .v-timeline > li > .v-timeline__body:after
    border-left-width: 0
    border-right-width: 14px
    left: -14px
    right: auto