@import '../bootstrap'
@import '../theme'

v-timeline($material)
  &:before
    background: $material.dividers

theme(v-timeline, "v-timeline")

.v-timeline
  padding-bottom: 24px
  position: relative

  &:before
    bottom: 0
    content: ''
    height: 100%
    left: calc(50% - 1px)
    position: absolute
    top: 0
    width: 2px

  .v-timeline-item
    display: flex
    flex-direction: row-reverse
    margin-bottom: 24px

    &:nth-child(odd)
      flex-direction: row

    .v-btn
      left: calc(50% - 28px)

    &__body
      height: 100%
      flex: 1 1 100%
      max-width: calc(50% - 56px)

  @media $display-breakpoints.sm-and-down
    &:before
      left: 27px // -1 for line width

    .v-timeline-item
      &:nth-child(odd)
        flex-direction: row-reverse

      .v-btn
        left: 0
        transition: color .3s $transition.swing

      &__body
        max-width: calc(100% - 84px)
