@import "../bootstrap"
@import "../theme"

/* Themes */
timeline($material)
  background-color: $material.timelines
  color: $material.text.primary

theme(timeline, "timeline")

.timeline
  max-width: 1104px
  margin: 0 auto
  padding: 0 30px 0 30px
  overflow: hidden

  &--hover
    cursor: pointer
    transition: all 0.4s cubic-bezier(0.25, 0.8, 0.25, 1)
    transition-property: box-shadow

    &:hover
      elevation(8)

  &--raised
    elevation(3)

  &__container
    margin: 30px 0 0 0
    padding: 0
    list-style: none
    position: relative

    &> .timeline__item
      position: relative
      min-height: 128px

      & .timeline__line
        content: ""
        position: absolute
        top: 44px
        padding: 0
        bottom: 0
        background: currentColor
        left: 10%

      &:last-child .timeline__line
        position: relative

        &:before
          width: 0px

.timeline__container > .timeline__item
  & .timeline__item--body__container
    margin: 0 0 0 15%
    padding-bottom: 48px
    padding-top: 24px
    position: relative

  & .timeline__icon
    width: 44px
    height: 44px
    speak: none
    line-height: 44px
    position: absolute
    border-radius: 50%
    background: inherit
    box-shadow: currentColor 0px 0px 0px 8px 
    text-align: center
    left: 10%
    top: 0
    padding: 0
    margin: 0 0 0 -28px

@media screen and (max-width: $grid-breakpoints.sm)
  .timeline
    padding: 0 15px 0 15px

    &__container
      margin: 16px 0 0 0

      &> .timeline__item .timeline__line
        left: 6%

  .timeline__container > .timeline__item
    & .timeline__item--body__conatainer
      margin: 0 0 0 12%

    & .timeline__icon
      left: 6%
